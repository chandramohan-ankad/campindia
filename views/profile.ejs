<% include partials/header%>
<div class="container">
        <h4><%= user.firstName[0].toUpperCase() + user.firstName.slice(1) +" "+ user.lastName[0].toUpperCase() + user.lastName.slice(1)%></h4>
        <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item">Contact Us: <br><%=user.contactNumber%> <br><a href="mailto:<%= user.email%>"><%= user.email%></a></li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
                <li class="list-group-item">Info 4</li>
            </div>
            <%if((currentuser && user._id.equals(currentuser._id)) || currentuser && currentuser.isAdmin){%>
            <div>
                <a href="/user/<%=user._id%>/edit">Edit Profile</a>
            </div>
            <div>
                <form action="/user/<%=user._id%>?_method=DELETE" method="POST">
                    <button>delete</button>
                </form>
            </div>
            <%}%>
        </div>
        <div class="col-md-9 camp">
                <h4 class="text-center">Campgrounds</h4>
                <div class="row">
                        <% campgrounds.forEach(function(campground){ %>
                        <a href="/campgrounds/<%=campground._id%>">
                        <div class="col-md-4">
                            <div class="thumbnail text-center" style="width: inherit;">
                                <img src="<%= campground.image %>" alt="Campground image"style="width: 100%;">
                                <div class="caption">
                                    <p><%= campground.name.toUpperCase() %>, <%= campground.address.district %>, <%= campground.address.state%></p>
                                </div></a>
                            </div>
                        </div>
                            <% }) %>
                    </div>

        </div>

</div>
<% include partials/footer%>