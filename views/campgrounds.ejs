<% include partials/header%>
<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp</h1>
            <p>View our handpicked Campgrounds from all over the world</p>
           <% if((currentuser && currentuser.userType === "owner") || currentuser && currentuser.isAdmin){ %>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            <% } %>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search[city]" placeholder="search with City /District..." class="form-control">
                        <input type="text" name="search[state]" placeholder="search with State..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <div class="col-md-12">
                <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
                <% } %>
    <div class="row">
        <% campgrounds.forEach(function(campground){ %>
        <a href="/campgrounds/<%=campground._id%>">
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail text-center" style="width: inherit;">
                <img src="<%= campground.image %>" alt="Campground image"style="width: 100%;">
                <div class="caption">
                    <h4><%= campground.name.toUpperCase() %></h4>
                </div></a>
            </div>
        </div>
            <% }) %>
    </div>
</div>
<% include partials/footer%>